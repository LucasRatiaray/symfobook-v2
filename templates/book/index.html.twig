{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Genres</th>
                <th>Description</th>
                <th>CoverImage</th>
                <th>PageCount</th>
                <th>PublishedAt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>
                    {% if book.author %}
                        {{ book.author.firstName }} {{ book.author.lastName }}
                    {% else %}
                        Unknown
                    {% endif %}
                </td>
                <td>
                    {% if book.genres %}
                        {% for genre in book.genres %}
                            <span class="badge bg-primary">{{ genre.name }}</span>
                        {% endfor %}
                    {% else %}
                        No genres
                    {% endif %}
                </td>
                <td>{{ book.description|length > 50 ? book.description|slice(0, 50) ~ '...' : book.description }}</td>
                <td>{{ book.coverImage }}</td>
                <td>{{ book.pageCount }}</td>
                <td>{{ book.publishedAt ? book.publishedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}