{% extends 'base.html.twig' %}

{% block title %}Book: {{ book.title }}{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>

    <div class="row">
        <div class="col-md-4">
            {% if book.coverImage %}
                <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}" alt="{{ book.title }}" class="img-fluid">
            {% else %}
                <div class="bg-light p-5 text-center">No cover image</div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Book Details</h5>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Author</dt>
                        <dd class="col-sm-9">
                            {% if book.author %}
                                {{ book.author.firstName }} {{ book.author.lastName }}
                                {% if book.author.nationality %}
                                    <span class="text-muted">({{ book.author.nationality }})</span>
                                {% endif %}
                            {% else %}
                                Unknown
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-3">Genres</dt>
                        <dd class="col-sm-9">
                            {% if book.genres|length > 0 %}
                                {% for genre in book.genres %}
                                    <span class="badge bg-primary">{{ genre.name }}</span>
                                {% endfor %}
                            {% else %}
                                No genres assigned
                            {% endif %}
                        </dd>
                        
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">{{ book.description }}</dd>
                        
                        <dt class="col-sm-3">Page Count</dt>
                        <dd class="col-sm-9">{{ book.pageCount }}</dd>
                        
                        <dt class="col-sm-3">Published</dt>
                        <dd class="col-sm-9">{{ book.publishedAt ? book.publishedAt|date('Y-m-d') : 'Unknown' }}</dd>
                    </dl>
                </div>
            </div>
            
            <h3 class="mt-4">Discussions</h3>
            {% if book.discussions|length > 0 %}
                <div class="list-group">
                    {% for discussion in book.discussions %}
                        <a href="{{ path('app_discussion_show', {'id': discussion.id}) }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">{{ discussion.title }}</h5>
                                <small>{{ discussion.createdAt ? discussion.createdAt|date('Y-m-d') : '' }}</small>
                            </div>
                            <p class="mb-1">{{ discussion.content|length > 100 ? discussion.content|slice(0, 100) ~ '...' : discussion.content }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small>{{ discussion.comments|length }} comments</small>
                                {% if discussion.user is defined and discussion.user %}
                                    <div>
                                        <small class="text-muted">By {{ discussion.user.firstName }} {{ discussion.user.lastName }}</small>
                                        {% if discussion.user.roles is defined %}
                                            {% if 'ROLE_ADMIN' in discussion.user.roles %}
                                                <span class="badge bg-danger ms-1">Admin</span>
                                            {% elseif 'ROLE_BANNED' in discussion.user.roles %}
                                                <span class="badge bg-warning ms-1">Banned</span>
                                            {% else %}
                                                <span class="badge bg-secondary ms-1">User</span>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <small class="text-muted">By Unknown user</small>
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p>No discussions yet. Be the first to start a discussion about this book!</p>
            {% endif %}
            <div class="mt-3">
                <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}